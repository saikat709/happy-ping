{
  "manifest_version": 2,
  
  "name": "HappyPing",
  "version": "1.0",

  "description": "To cheer you, its always there.",
  
  "icons": {
    "48": "icons/happy.svg",
    "96": "icons/happy.svg"
  },
  "browser_action": {
    "default_icon": "icons/happy.svg",
    "default_title": "HappyPing",
    "default_popup": "templates/popup.html"
  },

  "background": {
    "scripts": ["service/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],

  "chrome_url_overrides": {
    "newtab": "templates/newtab.html"
  },
  
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "<all_urls>",
    "webRequest",
    "notifications",
    "topSites"
  ]
}